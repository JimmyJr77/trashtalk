
<main class="container mt-5">
    
    <button type="button" id="new-post-button" class="btn btn-sm mb-2 btn-primary">
        <i class="bi bi-plus"></i> New Post
    </button>
    <div id="postFormContainer">
        <form id="postForm" style="display:none">
            <input type="text" id="title" name="title" class="form-control border-green mb-2" placeholder="Enter the title" required>
            <textarea id="post_content" name="post_content" class="form-control border-green mb-2" rows="3" placeholder="Your comment" required></textarea>
            
            <!-- The submit button -->
            <button type="submit" class="btn btn-sm btn-success mb-4">
                Submit Post
            </button>
            
            <!-- The cancel button -->
            <button type="button" id="cancelButton" class="btn btn-sm btn-danger mb-4">
                Cancel
            </button>
        </form>
    </div>


<!-- POSTS -->
{{#each posts}}
    <section id="primary-comment-container">  
        <div class="primary-comment-container">
            <div class="d-flex justify-content-between bg-dark-grey text-white" style="height: 25px;">
                <p id="username" class="d-flex px-2 font-weight-bold">{{user.username}}</p>
                <p class="d-flex px-2 font-weight-bold"></p>
            </div>
            <h3 id="title" class="p-2">{{title}}</h3>
            <div class="bg-white rounded pl-1 pb-1 mb-2 mx-2 border-green row" style="height:106px;">
                <div class="col-11">
                    <span id="primary-comment">{{post_content}}</span>
                </div>                
                <div class="col-1 d-flex justify-content-end"> 
                    <div id="button-container">
                        {{!-- <button type="button" id="reply-icon-sm" class="btn btn-sm btn-primary mt-1">
                            <i class="bi bi-plus"></i>
                        </button> --}}
                        <button type="button" class="btn btn-sm btn-primary recycle-btn mt-1" data-post-id="{{this.id}}">
                             <i class="fas fa-recycle"></i>
                        </button>
                        {{#if (eq ../userId user_id)}}
                            <button type="button" id="edit-post-btn" class="btn btn-sm btn-warning mt-1" data-put-id="{{this.id}}">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" id="delete-post-btn" class="btn btn-sm btn-danger mt-1" data-delete-id="{{this.id}}">
                                <i class="bi bi-trash"></i>
                            </button>
                        {{/if}}
                    </div>
                </div>
            </div>
            
            <div class="commentFormContainer container-5 pr-3">
                <form class="commentForm" style="display:none">
                    <textarea name="comment_content" class="form-control bg-white rounded px-3 border border-primary m-2" rows="3" placeholder="Your comment" required></textarea>
                    
                    <!-- The submit button -->
                    <button type="submit" class="btn btn-sm btn-success mb-4 mx-2">
                        Submit Comment
                    </button>
                    
                    <!-- The cancel button -->
                    <button type="button" class="btn btn-sm btn-danger cancelButton mb-4">
                        Cancel
                    </button>
                </form>
            </div>

            <div class="editCommentFormContainer container-5 pr-3">
                <div class="editCommentForm d-none">
                <textarea name="editComment_content" class="form-control" rows="3">{{replies_content}}</textarea>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
                <button type="button" class="btn btn-secondary mt-2 cancelButton">Cancel</button>
            </div>
            </div>

           <div id="editPostFormContainer">
                <form class="editPostForm mx-2" style="display:none">
                    <input type="text" name="editTitle" class="editTitle form-control border-green mb-2" value="{{title}}" required>
                    <textarea name="editPost_content" class="editPost_content form-control border-green mb-2" rows="3" required>{{post_content}}</textarea>
                    
                    <!-- The submit button -->
                    <button type="submit" class="btn btn-sm btn-success mb-4">
                        Update Post
                    </button>
                    
                    <!-- The cancel button -->
                    <button type="button" class="cancelButton btn btn-sm btn-danger mb-4">
                        Cancel
                    </button>
                </form>
            </div>


            <div class="col-12 d-flex justify-content-between align-items-bottom thin-row-15">
                <p id="comment-metadata" class="text-muted">{{this.commentCount}} replies</p>
                <p id="comment-metadata" class="text-muted">{{formatDate updatedAt}}</p>
            </div>
            <div class="col-12 d-flex justify-content-center align-items-center thin-row-15" onclick="toggleDropdown(this)">
                <i class="bi bi-caret-down-fill"></i>
            </div>


            <!-- REPLIES DROP DOWN -->
            {{#each replies}}
               {{> repliesPartial userId=../../userId}}
            {{/each}}
            
        </div>
    </section>
    <div style="height:30px;"></div>    
{{/each}}
</main>
<div style="height:30px;"></div>