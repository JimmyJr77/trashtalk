<body class="container-1">
    <!-- HEADER -->
    <header class="container-1">
        <div id="header-logo">
            <img src="/images/trashtalk-logo-lower.png" alt="Trash Talk Logo" id="logo-img">
        </div>
        {{#if loggedIn}}
        <div id="account-btns" class="top-black bg-warning btm-black d-flex">
            <button class="btn btn-logout">Logout</button>
            <button id="btn-signup" class="btn btn-signup  btn-center-text text-white" data-toggle="modal" data-target="#signupModal">Sign Up</button>
        {{else}}
        <div id="account-btns" class="top-black bg-warning btm-black d-flex">
            <button id="btn-login" class="btn btn-login btn-center-text btn-primary text-white" data-toggle="modal" data-target="#loginModal">Login</button>
            <button id="btn-signup" class="btn btn-signup  btn-center-text btn-primary text-white mr-5" data-toggle="modal" data-target="#signupModal">Sign Up</button>
        </div> 
